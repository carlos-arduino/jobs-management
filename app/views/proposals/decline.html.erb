<h1>Justificativa para declínio da proposta</h1> <br>

<p><strong>Status da candidatura: </strong><%= Enrollment.human_enum_name(:status, @proposal.enrollment.status) %> </p>
<p><strong>Status da proposta: </strong><%= Proposal.human_enum_name(:status, @proposal.status) %> </p>
<p><strong>Título da vaga: </strong><%= @proposal.enrollment.job.title %> </p>
<p><strong>Descrição: </strong><%= @proposal.enrollment.job.description %> </p> <br>

<%= form_with model: @proposal, 
                url: declined_proposal_path, 
                method: :patch do |form| %>
    <div>
        <%= form.label :reason %>
        <%= form.text_area :reason %>
        <% @proposal.errors.full_messages_for(:reason).each do |message| %>
            <%= message %>
        <% end %>
    </div><br>
    
    <div>
        <%= form.submit "Declinar Proposta" %>
    </div>
<% end %><br>
<hr>

<%= link_to 'Voltar', enrollments_path %>