<h3>Vagas disponíveis para candidatos</h3>
<% if @jobs.any? %>
    <div id="search-jobs">
        <h3>Busca vagas:</h3>
        <%= form_with url: search_path, method: :get do %>
          <%= label_tag :q, 'Busca:' %>
          <%= text_field_tag :q %>
          <%= label_tag :c, 'Empresa:' %>
          <%= select_tag :c, options_for_select(@fill_select_company) %>
          <%= submit_tag 'Pesquisar' %>
        <% end %>
    </div>    
    <br><hr>
    <% @jobs.each do |job| %>
        <hr>
            <div id="job-<%= job.id %>">
                <p><strong>Empresa: <%= "#{job.company.name}" %></strong></p>
                <p><strong>Título: </strong><%= job.title %></p>
                <p><strong>Descrição: </strong><%= job.description %></p>
                <p><strong>Level: </strong><%= job.level %></p>
                <p><strong>Quantidade: </strong><%= job.quantity %></p>
                <p><strong>Data Limite: </strong><%= I18n.l job.limit_date %></p>
                <p><%= link_to 'Aplicar para a vaga', enroll_job_path(job), method: :post %></p>
            </div>
        <hr>
    <% end %>
<% else %>
    <h3>Sem vagas cadastradas até o momento</h3>
<% end %>





