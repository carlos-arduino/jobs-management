<h2>Sign up for Candidates</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "candidates/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <p>Addicional Information (*Required only Full name. Others it's optional)</p>

  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, :required => 'required' %>
  </div>

  <div class="field">
    <%= f.label :social_name %>
    <%= f.text_field :social_name %>
  </div>

  <div class="field">
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :cel_number %>
    <%= f.text_field :cel_number %>
  </div>

  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_area :biography %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_field :birth_date %>
  </div><br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
<% end %>
<br>
<%= render "candidates/shared/links" %>
